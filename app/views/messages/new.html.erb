<h1 class="text-center mt-3">Contact</h1>
<div class="container col-8 my-5">
  <div class="d-flex">
    <div class="col-5">
      <img src="https://picsum.photos/200/300?grayscale" alt="" class="w-100 h-100">
    </div>
    <div class="col-7">
      <div>
        <h4 class="mb-3"><strong>Atelier 12</strong>, site Arcelor Mittal Dommeldange</h4>
        <p class="my-0">1 rue de la cimenterie, Dommeldange</p>
        <p class="my-0">Luxembourg, L - 1050</p>
        <p class="my-0">TÃ©l : +352 621 68 76 74</p>
        <a href="https://www.facebook.com/MarcoBustamanteCayo/">facebook</a>
      </div>
      <div class="mt-3">
        <%= simple_form_for (@message) do |m| %>
          <div class="row">
            <div class="col-6">
              <%= m.input :name, label: "nom", class: "w-100" %>
            </div>
            <div class="col-6">
              <%= m.input :email, class: "w-100" %>
            </div>
          </div>
          <%= m.input :subject, label: "sujet", class: "w-100" %>
          <%= m.input :containt, label: "message", class: "w-100" %>

          <div class="border my-3"></div>
          <%= m.button :submit, class: "btn btn-success w-100 mb-2" %>
          <%= link_to "Back", :back, class: "btn btn-dark w-100" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
